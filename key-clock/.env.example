# Keycloak Environment Variables
# Copy this file to .env and update with your actual values
# DO NOT commit .env to git!

# PostgreSQL Database
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=keycloak

# Keycloak Database Configuration
KC_DB=postgres
KC_DB_URL_HOST=postgres
KC_DB_URL_DATABASE=keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=your_secure_password_here

# Keycloak Admin Credentials (CHANGE THESE!)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_password_here

# Keycloak Host Configuration
KC_HOSTNAME=keycloak.lan
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false
KC_HTTP_ENABLED=true
KC_PROXY=edge
KC_PROXY_ADDRESS_FORWARDING=true

# Java Options
JAVA_OPTS_APPEND=-Xms512m -Xmx1024m
